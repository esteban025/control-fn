---
import "../styles/global.css";
import Header from "@sections/Header.astro";
import Footer from "@sections/Footer.astro";
interface Props {
	title: string;
	description: string;
	inLogin?: boolean;
}
const { title, description, inLogin = false } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="font-inter grid grid-rows-[auto_1fr_auto] min-h-screen">
		<Header inLogin={inLogin} />
		<slot />
		<Footer />
	</body>
</html>

<script>
	const { signIn, signOut } = await import("auth-astro/client");
	const $btnLogin = document.getElementById(
		"login-button",
	) as HTMLButtonElement;
	const $btnLogout = document.getElementById(
		"logout-button",
	) as HTMLButtonElement;

	$btnLogin?.addEventListener("click", () => {
		signIn("google");
	});
	if ($btnLogout) $btnLogout.onclick = () => signOut();
</script>
