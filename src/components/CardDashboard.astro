---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<article class="w-full bg-gray-50 rounded-xl p-4 shadow-md">
  <header>
    <h2 class="flex items-center gap-2 text-lg font-semibold">
      <slot name="icon" />
      <span>{title}</span>
    </h2>
    <p class="text-gray-600 text-xs lg:text-base">{description}</p>
  </header>
  <div class="cc">
    <slot />
  </div>
</article>
